{
  "title": "Web3 Platform Overview",
  "uid": "web3-platform-overview",
  "timezone": "browser",
  "editable": true,
  "schemaVersion": 37,
  "version": 1,
  "panels": [
    {
      "type": "stat",
      "title": "Gateway Successful Requests",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{app=\"web3-gateway\",status=~\"2..\"}[5m]))",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 6 }
    },
    {
      "type": "graph",
      "title": "Custody gRPC Latency (p95)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(grpc_server_handling_seconds_bucket{service=\"custody-service\"}[5m])) by (le))",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 8, "y": 0, "w": 16, "h": 8 }
    },
    {
      "type": "table",
      "title": "Kafka Broker Health",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "kafka_server_broker_topic_metrics_messages_in_total",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 6, "w": 24, "h": 8 }
    }
  ],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-6h",
    "to": "now"
  }
}
